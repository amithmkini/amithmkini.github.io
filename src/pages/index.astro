---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import LinkButton from "@components/LinkButton.astro";
import Hr from "@components/Hr.astro";
import Card from "@components/Card";
import SectionItem from "@components/SectionItem";
import Socials from "@components/Socials.astro";
import getSortedPosts from "@utils/getSortedPosts";
import { SOCIALS } from "@config";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);

const socialCount = SOCIALS.filter(social => social.active).length;
---

<Layout>
  <Header />
  <main id="main-content">
    <section id="hero">
      <div class="image">
        <img class="image-dp" src="/assets/Amith.webp" alt="Amith Kini">
      </div>
      <div class="content">
        <p>
          Howdy! I am a CS Masters student at the 
          <span id="university">Texas A&amp;M University</span>.
          I like to try out new tech stacks and frameworks every day so you don't have to.
          Looking for full-time opportunities.
        </p>
        {
          // only display if at least one social link is enabled
          socialCount > 0 && (
            <div class="social-wrapper">
              <div class="social-links">Social Links:</div>
              <Socials />
            </div>
          )
        }
      </div>
    </section>

    <Hr />

    <section class="more-info">
      <h2>Experience</h2>

      <SectionItem
        company="Texas A&amp;M University"
        position="Graduate Teaching Assistant"
        period="August 2023 - December 2023"
        location="College Station, TX"
        points={[
          "Teaching Assistant for CSCE 625 - Artificial Intelligence.",
          "Responsible for grading assignments and exams, holding office hours, and helping students with their doubts."
        ]}
      />
      <SectionItem
        company="Arista Networks"
        position="Software Engineer"
        period="July 2019 - July 2022"
        location="Benagluru, India"
        points={[
          "Worked on the Arista EOS (Extensible Operating System) in the Quality of Service (QoS) for Arista's Data Center Switches.",
          "Took ownership and worked on time-sensitive feature requirements like Interface Policing and ACL-based policy-maps that were required by tier 1 network providers in Europe and ISPs in Australia."
        ]}
      />
      <SectionItem
        company="Arista Networks"
        position="Software Engineer Intern"
        period="May 2018 - July 2018"
        location="Benagluru, India"
        points={[
          "Worked on Layer 2 Protocol Forwarding for ISPs who wanted to bypass CPU traps for L2 Protocol packets over pseudowire tunnels.",
          "Designed and worked on the communication between 2 processes using C++ for hardware programming."
        ]}
      />
      <SectionItem
        company="YellowAnt"
        position="Software Engineer"
        period="July 2019 - July 2022"
        location="Benagluru, India"
        points={[
          "Worked on integrating new apps into YellowAnt's ChatOps platform using APIs of different apps like Salesforce and Sentry",
          "Worked on a Proof-of-Concept natural language based textual input to the chat application."
        ]}
      />

      <div class="all-posts-btn-wrapper">
        <LinkButton href="/Resume_Amith_Kini.pdf" newTab={true}>
          Resume (PDF)
          <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-external-link"
               width="4" height="4" viewBox="0 0 48 48" stroke-width="1" stroke="currentColor"
               fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" 
               d="M0 0h24v24H0z" fill="none"/>
            <path d="M12 6h-6a2 2 0 0 0 -2 2v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-6" />
            <path d="M11 13l9 -9" />
            <path d="M15 4h5v5" />
          </svg>
        </LinkButton>
      </div>
    </section>

    <Hr />
    <section class="more-info">
      <h2>Recent Posts</h2>
      <ul>
        {
          sortedPosts
            .map(
              ({ data, slug }, index) =>
                index < 4 && (
                  <Card
                    href={`/posts/${slug}`}
                    frontmatter={data}
                    secHeading={false}
                  />
                )
            )
        }
      </ul>
      <div class="all-posts-btn-wrapper">
        <LinkButton href="/posts">
          All Posts
          <svg xmlns="http://www.w3.org/2000/svg"
            ><path
              d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z"
            ></path>
          </svg>
        </LinkButton>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  /* ===== Hero Section ===== */
  #hero {
    @apply pb-6 pt-8 flex flex-col items-center justify-center text-center;
  }
  #hero h1 {
    @apply my-4 inline-block text-3xl font-bold sm:my-8 sm:text-5xl;
  }
  #hero .rss-link {
    @apply mb-6;
  }
  #hero .rss-icon {
    @apply mb-2 h-6 w-6 scale-110 fill-skin-accent sm:mb-3 sm:scale-125;
  }
  #hero p {
    @apply my-2;
  }
  #hero .image-dp {
    @apply mb-4 rounded-full h-36 w-36 sm:mb-0 sm:h-64 sm:w-64;
  }
  #university {
    @apply font-semibold text-skin-university;
  }
  .social-wrapper {
    @apply mt-4 flex flex-col sm:flex-row sm:items-center;
  }
  .social-links {
    @apply mb-1 mr-2 whitespace-nowrap sm:mb-0;
  }

  /* ===== Other Sections ===== */
  .more-info {
    @apply pb-6 pt-12;
  }
  .more-info h2 {
    @apply text-2xl font-semibold tracking-wide;
  }
  .all-posts-btn-wrapper {
    @apply my-8 text-center;
  }
</style>
